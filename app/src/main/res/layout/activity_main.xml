<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseActivity"
    tools:context=".MainActivity">


    <TextView
        style="@style/GameTitle"
        android:text="@string/game_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStartMulitplayer"
            style="@style/MainScreenButton"
            android:text="@string/multi_player" />

        <TextView
            style="@style/MainScreenButtonBlurb"
            android:text="@string/mult_player_explanation" />

        <Button
            android:id="@+id/btnStartSingleplayer"
            style="@style/MainScreenButtonDisabled"
            android:enabled="false"
            android:text="@string/single_player" />

        <TextView
            style="@style/MainScreenButtonBlurb"
            android:text="@string/single_player_explanation" />

        <Button
            android:id="@+id/btnHighscores"
            style="@style/MainScreenButton"
            android:text="@string/highscore" />
    </LinearLayout>
</RelativeLayout>
